{% extends 'base.html.twig' %}

{% block title %}{{ contrat ? 'Modifier' : 'Nouveau' }} contrat - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">
            {{ contrat ? 'Modifier le contrat' : 'Nouveau contrat' }}
        </h1>

        <form method="POST" action="{{ contrat ? url('/contrats/') ~ contrat.id ~ '/edit' : url('/contrats/create') }}">
            <!-- Nom -->
            <div class="mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700 mb-2">
                    Nom du contrat *
                </label>
                <input type="text" id="nom" name="nom" required
                       value="{{ contrat.nom|default('') }}"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                       placeholder="Ex: Assurance habitation">
            </div>

            <!-- Fournisseur -->
            <div class="mb-4">
                <label for="fournisseur" class="block text-sm font-medium text-gray-700 mb-2">
                    Fournisseur
                </label>
                <input type="text" id="fournisseur" name="fournisseur"
                       value="{{ contrat.fournisseur|default('') }}"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                       placeholder="Ex: AXA, EDF, Orange...">
            </div>

            <!-- Catégorie -->
            <div class="mb-4">
                <label for="categorie_id" class="block text-sm font-medium text-gray-700 mb-2">
                    Catégorie
                </label>
                <select id="categorie_id" name="categorie_id"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <option value="">Sans catégorie</option>
                    {% for cat in categories %}
                        <option value="{{ cat.id }}" {% if contrat.categorie_id == cat.id %}selected{% endif %}>
                            {{ cat.nom }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Fréquence -->
            <div class="mb-4">
                <label for="frequence" class="block text-sm font-medium text-gray-700 mb-2">
                    Fréquence *
                </label>
                <select id="frequence" name="frequence" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                    <option value="mensuel" {% if not contrat or contrat.frequence == 'mensuel' %}selected{% endif %}>Mensuel</option>
                    <option value="bimensuel" {% if contrat.frequence == 'bimensuel' %}selected{% endif %}>Bimensuel (tous les 2 mois)</option>
                    <option value="trimestriel" {% if contrat.frequence == 'trimestriel' %}selected{% endif %}>Trimestriel (tous les 3 mois)</option>
                    <option value="semestriel" {% if contrat.frequence == 'semestriel' %}selected{% endif %}>Semestriel (tous les 6 mois)</option>
                    <option value="annuel" {% if contrat.frequence == 'annuel' %}selected{% endif %}>Annuel</option>
                </select>
            </div>

            <!-- Date de début -->
            <div class="mb-4">
                <label for="date_debut" class="block text-sm font-medium text-gray-700 mb-2">
                    Date de début *
                </label>
                <input type="date" id="date_debut" name="date_debut" required
                       value="{{ contrat.date_debut|default('now'|date('Y-m-d')) }}"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
            </div>

            <!-- Notes -->
            <div class="mb-6">
                <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
                    Notes
                </label>
                <textarea id="notes" name="notes" rows="3"
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                          placeholder="Notes optionnelles...">{{ contrat.notes|default('') }}</textarea>
            </div>

            <!-- Actions -->
            <div class="flex justify-between">
                <a href="{{ url('/contrats') }}" 
                   class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">
                    Annuler
                </a>
                
                <div class="flex space-x-2">
                    {% if contrat %}
                    <button type="button" onclick="if(confirm('Supprimer ce contrat ?')) document.getElementById('delete-form').submit();"
                            class="px-4 py-2 text-red-600 bg-red-50 rounded-lg hover:bg-red-100">
                        Supprimer
                    </button>
                    {% endif %}
                    
                    <button type="submit" 
                            class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                        {{ contrat ? 'Enregistrer' : 'Créer' }}
                    </button>
                </div>
            </div>
        </form>

        {% if contrat %}
        <form id="delete-form" method="POST" action="{{ url('/contrats/' ~ contrat.id  ~ '/delete') }}" style="display:none;"></form>
        {% endif %}
    </div>
</div>

<script>
    lucide.createIcons();
</script>
{% endblock %}
