{% extends 'base.html.twig' %}

{% block title %}Contrats - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Mes Contrats</h1>
        <a href="{{ url('/contrats/create') }}" 
           class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center justify-center sm:justify-start text-sm sm:text-base">
            <i data-lucide="plus" class="w-4 h-4 mr-2"></i>
            Nouveau contrat
        </a>
    </div>

    <!-- Grille de cartes -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for contrat in contrats %}
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
            <div class="p-4">
                <!-- Header de la carte -->
                <div class="flex items-start justify-between mb-3">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center" 
                             style="background-color: {{ contrat.categorie_couleur }}20; color: {{ contrat.categorie_couleur }}">
                            <i data-lucide="{{ contrat.categorie_icone }}" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900">{{ contrat.nom }}</h3>
                            <p class="text-sm text-gray-500">{{ contrat.fournisseur }}</p>
                        </div>
                    </div>
                    <!-- Bouton éditer -->
                    <a href="{{ url('/contrats/' ~ contrat.id) }}" 
                       class="text-gray-400 hover:text-indigo-600">
                        <i data-lucide="edit-2" class="w-5 h-5"></i>
                    </a>
                </div>

                <!-- Infos sur une ligne : Catégorie, Fréquence, Montant -->
                <div class="flex items-center justify-between text-sm">
                    <div class="flex items-center space-x-2">
                        <span class="inline-block px-2 py-1 text-xs font-medium rounded" 
                              style="background-color: {{ contrat.categorie_couleur }}20; color: {{ contrat.categorie_couleur }}">
                            {{ contrat.categorie_nom }}
                        </span>
                        <span class="text-gray-500">
                            {% if contrat.frequence == 'mensuel' %}Mensuel
                            {% elseif contrat.frequence == 'bimensuel' %}Bimensuel
                            {% elseif contrat.frequence == 'trimestriel' %}Trimestriel
                            {% elseif contrat.frequence == 'semestriel' %}Semestriel
                            {% else %}Annuel{% endif %}
                        </span>
                    </div>
                    {% if contrat.dernier_montant %}
                        <div class="text-lg font-bold text-gray-900">
                            {{ contrat.dernier_montant|money }}
                        </div>
                    {% else %}
                        <div class="text-sm text-gray-400 italic">—</div>
                    {% endif %}
                </div>

                <!-- Prochaine échéance (optionnel) -->
                {% if contrat.prochaine_echeance %}
                <div class="mt-2 text-xs text-gray-500">
                    Prochaine : {{ contrat.prochaine_echeance|date_fr }}
                </div>
                {% endif %}
            </div>
        </div>
        {% else %}
        <div class="col-span-full">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
                <i data-lucide="file-text" class="w-16 h-16 mx-auto mb-4 text-gray-300"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun contrat</h3>
                <p class="text-gray-500 mb-4">Commencez par créer votre premier contrat</p>
                <a href="{{ url('/contrats/create') }}" 
                   class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                    <i data-lucide="plus" class="w-4 h-4 mr-2"></i>
                    Créer un contrat
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<script>
    lucide.createIcons();
</script>
{% endblock %}
