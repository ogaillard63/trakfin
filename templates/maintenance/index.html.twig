{% extends "base.html.twig" %}

{% block content %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Maintenance</h2>
            <p class="text-sm text-gray-500 mt-1">Gérez les sauvegardes et la restauration de la base de données</p>
        </div>
        <form action="{{ url('/maintenance/backup') }}" method="POST">
            <button type="submit" class="flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors shadow-sm">
                <i data-lucide="save" class="w-5 h-5 mr-2"></i>
                Créer une sauvegarde
            </button>
        </form>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex items-center justify-between">
            <h3 class="font-medium text-gray-700">Dernières sauvegardes</h3>
            <span class="text-xs text-gray-500 bg-gray-200 px-2 py-1 rounded-full">{{ backups|length }} fichiers</span>
        </div>
        
        {% if backups is empty %}
            <div class="p-8 text-center text-gray-500">
                <i data-lucide="archive" class="w-12 h-12 mx-auto mb-3 text-gray-300"></i>
                <p>Aucune sauvegarde disponible</p>
            </div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-500">
                    <thead class="bg-gray-50 text-xs uppercase text-gray-700">
                        <tr>
                            <th scope="col" class="px-6 py-3">Fichier</th>
                            <th scope="col" class="px-6 py-3">Date</th>
                            <th scope="col" class="px-6 py-3">Taille</th>
                            <th scope="col" class="px-6 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for backup in backups %}
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 font-medium text-gray-900">
                                <div class="flex items-center">
                                    <i data-lucide="file-archive" class="w-4 h-4 mr-2 text-indigo-500"></i>
                                    {{ backup.name }}
                                </div>
                            </td>
                            <td class="px-6 py-4">{{ backup.date }}</td>
                            <td class="px-6 py-4 font-mono text-xs">{{ backup.size }}</td>
                            <td class="px-6 py-4 text-right">
                                <form action="{{ url('/maintenance/restore') }}" method="POST" class="inline-block" onsubmit="return confirm('ATENTION : Êtes-vous sûr de vouloir restaurer cette sauvegarde ?\n\nLa base de données actuelle sera ÉCRASÉE et toutes les données récentes non sauvegardées seront PERDUES.\n\nCette action est irréversible.');">
                                    <input type="hidden" name="filename" value="{{ backup.name }}">
                                    <button type="submit" class="flex items-center text-indigo-600 hover:text-indigo-900 font-medium text-xs px-3 py-1 border border-indigo-200 rounded hover:bg-indigo-50 transition-colors">
                                        <i data-lucide="rotate-ccw" class="w-3 h-3 mr-1"></i>
                                        Restaurer
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
