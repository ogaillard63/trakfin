{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header avec sélecteur de mois -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-800">Dashboard</h1>
            <p class="text-slate-500 mt-1">Vue d'ensemble de vos finances</p>
        </div>
        
        <div class="flex items-center bg-white p-1.5 rounded-2xl shadow-sm border border-slate-200/60">
            {% set prev_month = month - 1 %}
            {% set prev_year = year %}
            {% if prev_month < 1 %}
                {% set prev_month = 12 %}
                {% set prev_year = year - 1 %}
            {% endif %}
            
            {% set next_month = month + 1 %}
            {% set next_year = year %}
            {% if next_month > 12 %}
                {% set next_month = 1 %}
                {% set next_year = year + 1 %}
            {% endif %}
            
            <a href="{{ url('/?year=' ~ prev_year ~ '&month=' ~ prev_month) }}" 
               class="p-2.5 text-slate-400 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all">
                <i data-lucide="chevron-left" class="w-5 h-5"></i>
            </a>
            <span class="px-6 py-1 font-semibold text-slate-700 min-w-[140px] text-center capitalize">
                {{ month|mois_fr }} {{ year }}
            </span>
            <a href="{{ url('/?year=' ~ next_year ~ '&month=' ~ next_month) }}" 
               class="p-2.5 text-slate-400 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-all">
                <i data-lucide="chevron-right" class="w-5 h-5"></i>
            </a>
        </div>
    </div>

    <!-- Échéances du mois -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="p-6 sm:p-8 bg-gradient-to-br from-primary-600 to-indigo-700 text-white">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h2 class="text-lg font-medium text-primary-100 mb-1">Total ce mois-ci</h2>
                    <div class="text-4xl sm:text-5xl font-bold tracking-tight">
                        {{ total_mois|money }}
                    </div>
                </div>
                <div class="bg-white/10 backdrop-blur-md rounded-2xl p-4 border border-white/10 hidden sm:block">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-white/20 rounded-lg">
                            <i data-lucide="calendar" class="w-6 h-6 text-white"></i>
                        </div>
                        <div>
                            <div class="text-sm text-primary-100">Échéances</div>
                            <div class="font-bold text-lg">{{ echeances_mois|length }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="divide-y divide-slate-100 bg-white">
            {% if echeances_mois|length > 0 %}
                {% for echeance in echeances_mois %}
                <div class="p-4 sm:p-5 hover:bg-slate-50 transition-colors group">
                    <div class="flex items-start sm:items-center gap-4">
                        <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 shadow-sm transition-transform group-hover:scale-110 duration-200" 
                             style="background-color: {{ echeance.categorie_couleur }}15; color: {{ echeance.categorie_couleur }}">
                            <i data-lucide="{{ echeance.categorie_icone }}" class="w-6 h-6"></i>
                        </div>
                        
                        <div class="flex-1 min-w-0">
                            <div class="font-semibold text-slate-800 text-base truncate">{{ echeance.contrat_nom }}</div>
                            <div class="text-sm text-slate-500 font-medium">{{ echeance.date_echeance|date_fr }}</div>
                        </div>
                        
                        <div class="text-right flex-shrink-0">
                            <div class="font-bold text-slate-800 text-base">{{ echeance.montant|money }}</div>
                        </div>
                        
                        <div class="flex-shrink-0 ml-2">
                            {% if echeance.statut == 'paye' %}
                                <span class="px-3 py-1 text-xs font-semibold text-green-700 bg-green-50 border border-green-100 rounded-full flex items-center gap-1.5">
                                    <i data-lucide="check-circle" class="w-3 h-3"></i> Payé
                                </span>
                            {% else %}
                                <div class="flex items-center gap-2">
                                    <a href="{{ url('/echeances/' ~ echeance.id ~ '/edit') }}" 
                                       class="p-2 text-slate-400 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-colors"
                                       title="Modifier l'échéance">
                                        <i data-lucide="pencil" class="w-4 h-4"></i>
                                    </a>
                                    <form method="POST" action="{{ url('/echeances/' ~ echeance.id  ~ '/payer') }}" class="inline">
                                        <button type="submit" 
                                                class="px-4 py-2 text-xs font-semibold text-slate-600 bg-slate-100 rounded-lg hover:bg-green-500 hover:text-white transition-all shadow-sm flex items-center gap-2 group/btn">
                                            <i data-lucide="check" class="w-3.5 h-3.5 group-hover/btn:scale-110 transition-transform"></i>
                                            Payer
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <div class="p-12 text-center">
                    <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300">
                        <i data-lucide="calendar-check" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-lg font-medium text-slate-900">Tout est à jour !</h3>
                    <p class="text-slate-500">Aucune échéance prévue pour ce mois-ci</p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Contrats ayant augmenté -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 flex flex-col">
            <div class="p-6 border-b border-slate-100 flex items-center justify-between">
                <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                    <i data-lucide="trending-up" class="w-5 h-5 text-red-500"></i>
                    Augmentations
                </h2>
                {% if contrats_augmentation|length > 0 %}
                <span class="px-2.5 py-1 bg-red-50 text-red-600 text-xs font-bold rounded-md">{{ contrats_augmentation|length }}</span>
                {% endif %}
            </div>
            
            <div class="divide-y divide-slate-100 flex-1">
                {% if contrats_augmentation|length > 0 %}
                    {% for contrat in contrats_augmentation %}
                    <a href="{{ url('/contrats/' ~ contrat.id) }}" 
                       class="block p-4 hover:bg-slate-50 transition-colors group">
                        <div class="flex items-center justify-between gap-4">
                            <div class="flex-1 min-w-0">
                                <div class="font-semibold text-slate-800 truncate group-hover:text-primary-600 transition-colors">{{ contrat.nom }}</div>
                                <div class="text-sm text-slate-500 mt-0.5">
                                    {{ contrat.avant_dernier_montant|money }} <span class="text-slate-300 px-1">→</span> <span class="font-medium text-slate-700">{{ contrat.dernier_montant|money }}</span>
                                </div>
                            </div>
                            <div class="flex flex-col items-end">
                                <div class="text-red-500 font-bold bg-red-50 px-2.5 py-1 rounded-lg text-sm border border-red-100">
                                    +{{ contrat.pourcentage_augmentation|number_format(1) }}%
                                </div>
                            </div>
                        </div>
                    </a>
                    {% endfor %}
                {% else %}
                    <div class="p-8 text-center text-slate-500 flex flex-col items-center justify-center h-full min-h-[160px]">
                        <div class="w-12 h-12 rounded-full bg-green-50 flex items-center justify-center mb-3">
                            <i data-lucide="check-circle-2" class="w-6 h-6 text-green-500"></i>
                        </div>
                        <p class="font-medium text-slate-600">Aucune augmentation</p>
                        <p class="text-sm">Vos contrats sont stables ce mois-ci</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Projection annuelle -->
        <div class="relative bg-slate-900 rounded-2xl shadow-lg border border-slate-800 overflow-hidden text-white flex flex-col">
            <!-- Decorative gradient -->
            <div class="absolute top-0 right-0 -tr-20 w-64 h-64 bg-primary-600/20 blur-3xl rounded-full pointer-events-none"></div>
            
            <div class="p-6 border-b border-white/10 relative z-10">
                <h2 class="text-lg font-bold flex items-center gap-2">
                    <i data-lucide="bar-chart-3" class="w-5 h-5 text-primary-400"></i>
                    Projection {{ year }}
                </h2>
            </div>
            
            <div class="p-8 flex-1 flex flex-col items-center justify-center relative z-10">
                <div class="text-center">
                    <div class="text-sm text-slate-400 font-medium tracking-wide uppercase mb-2">Reste à payer</div>
                    <div class="text-4xl sm:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-400 shadow-sm mb-4">
                        {{ projection_annuelle|money }}
                    </div>
                    <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-white/10 border border-white/10 text-sm text-slate-300">
                        <i data-lucide="calendar-clock" class="w-4 h-4"></i>
                        Fin de l'année
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    lucide.createIcons();
</script>
{% endblock %}
